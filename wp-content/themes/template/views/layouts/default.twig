<!DOCTYPE html>
<html lang="{{ getSiteLanguage() }}">
	<head>
		<meta charset="{{ site.charset }}" />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<meta content="IE=edge" http-equiv="x-ua-compatible" />
		<link rel="pingback" href="{{ site.pingback }}" />
		{{ function('wp_head') }}

		{# Favicons #}
		<link rel="apple-touch-icon" sizes="180x180" href="{{ theme.uri }}/resources/Public/Favicons/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="{{ theme.uri }}/resources/Public/Favicons/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="{{ theme.uri }}/resources/Public/Favicons/favicon-16x16.png" />
		<link rel="manifest" href="{{ theme.uri }}/resources/Public/Favicons/site.webmanifest" />
		<link rel="mask-icon" href="{{ theme.uri }}/resources/Public/Favicons/safari-pinned-tab.svg" color="#5bbad5" />
		<link rel="shortcut icon" href="{{ theme.uri }}/resources/Public/Favicons/favicon.ico" />
		<meta name="msapplication-TileColor" content="#da532c" />
		<meta name="msapplication-config" content="{{ theme.uri }}/resources/Public/Favicons/browserconfig.xml" />
		<meta name="theme-color" content="#ffffff" />

		{# Google Tag Manager #}
		{% if fn('wp_get_environment_type') == 'production' and options.general_gtm %}
			<script type="text/plain">
				(function(w,d,s,l,i){ w[l]=w[l]||[];w[l].push({'gtm.start': new Date().getTime(),event:'gtm.js'}); var
				f=d.getElementsByTagName(s)[0],j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';
				j.async=true;j.src='https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f); })(window,document,'script','dataLayer','{{
					options.general_gtm
				}}');
			</script>
		{% endif %}
	</head>
	<body>
		<span id="page-preloader"></span>
		<div id="page">
			{# Header #}
			{% include 'partials/page/header.twig' %}

			{# Content #}
			<div id="content">
				<main id="main">
					{% block content %}

					{% endblock %}
				</main>

				{# Footer #}
				{% include 'partials/page/footer.twig' %}
			</div>

			{# Scroll to top #}
			{% if options.general_scroll_to_top %}
				<div class="page-return-top" v-on:click="scrollToTop">
					<svg clip-rule="evenodd"
						fill-rule="evenodd"
						stroke-linejoin="round"
						stroke-miterlimit="2"
						viewBox="0 0 24 24"
						xmlns="http://www.w3.org/2000/svg"
						class="icon">
						<path d="m11.998 21.995c5.517 0 9.997-4.48 9.997-9.997 0-5.518-4.48-9.998-9.997-9.998-5.518 0-9.998 4.48-9.998 9.998 0 5.517 4.48 9.997 9.998 9.997zm0-1.5c-4.69 0-8.498-3.807-8.498-8.497s3.808-8.498 8.498-8.498 8.497 3.808 8.497 8.498-3.807 8.497-8.497 8.497zm4.845-6.711c.108.141.157.3.157.456 0 .389-.306.755-.749.755h-8.501c-.445 0-.75-.367-.75-.755 0-.157.05-.316.159-.457 1.203-1.554 3.252-4.199 4.258-5.498.142-.184.36-.29.592-.29.23 0 .449.107.591.291zm-7.564-.289h5.446l-2.718-3.522z"
							fill-rule="nonzero" />
					</svg>
				</div>
			{% endif %}
		</div>

		{# Footer #}
		{{ function('wp_footer') }}
	</body>
</html>
