<header is="vue:page-header" class="header">
	<template v-slot:default="slotProps">
		<div class="container-fluid">
			<div class="row align-items-center">
				<div class="col-auto">
					{# Site logo #}
					{% if options.general_logo %}
						<a class="header-logo" href="{{ site.home_url }}">
							<img src="{{ get_image(options.general_logo)|resize(0, 50) }}"
								class="header-site-logo"
								alt="{{ get_image(options.general_logo).alt }}"
								width="50"
								height="50" />
						</a>
					{% endif %}
				</div>

				<div class="col-auto d-none d-lg-flex">
					{% include 'partials/navigations/main_navigation.twig' %}

					{{ languageSwitcher() }}

					{# Search #}
					{% if options.general_search %}
						<div class="header-search d-flex">
							<button class="btn btn-icon header-btn header-search-btn"
								click="slotProps.showSearch">
								Search
								<span class="visually-hidden">Search</span>
							</button>
							<div class="header-search-body">
								<form action="/" class="position-relative">
									<input class="form-control header-search-input"
										type="text"
										name="s"
										minlength="4"
										placeholder="{{ __('Your search term', 'template') }}"
										required />
									<button type="submit" class="header-search-submit">
										<svg class="icon"
											width="24"
											height="24"
											viewBox="0 0 24 24"
											fill="none"
											xmlns="http://www.w3.org/2000/svg">
											<path fill-rule="evenodd"
												clip-rule="evenodd"
												d="M18.319 14.4326C20.7628 11.2941 20.542 6.75347 17.6569 3.86829C14.5327 0.744098 9.46734 0.744098 6.34315 3.86829C3.21895 6.99249 3.21895 12.0578 6.34315 15.182C9.22833 18.0672 13.769 18.2879 16.9075 15.8442C16.921 15.8595 16.9351 15.8745 16.9497 15.8891L21.1924 20.1317C21.5829 20.5223 22.2161 20.5223 22.6066 20.1317C22.9971 19.7412 22.9971 19.1081 22.6066 18.7175L18.364 14.4749C18.3493 14.4603 18.3343 14.4462 18.319 14.4326ZM16.2426 5.28251C18.5858 7.62565 18.5858 11.4246 16.2426 13.7678C13.8995 16.1109 10.1005 16.1109 7.75736 13.7678C5.41421 11.4246 5.41421 7.62565 7.75736 5.28251C10.1005 2.93936 13.8995 2.93936 16.2426 5.28251Z"
												fill="currentColor" />
										</svg>
									</button>
								</form>
							</div>
						</div>
					{% endif %}
				</div>

				<div class="col-auto ms-auto order-lg-last d-lg-none">
					{# Mobile nv toggle button #}
					<button class="header-btn mobile-nav-toggle"
						@click="slotProps.toggleMobileNav">
						<div class="icon-menu">
						<span></span>
						<span></span>
						<span></span>
						</div>
						<span class="visually-hidden">Toggle mobile navigation</span>
					</button>

					<div class="mobile-nav">
					{% include 'partials/navigations/main_navigation.twig' %}
					</div>
				</div>
			</div>
		</div>
	</template>
</header>
